<!DOCTYPE html>
  <html>

    <head>
      
      <meta charset="utf-8">

      <style>

        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }

        td, th {
          border: 1px solid black;
          text-align: left;
          padding: 8px;
        }

        tr:nth-child(even) {
          background-color: #dddddd;
        }

      </style>
    </head>

    <body>

      <div>
        
        <h3><center><%= data.affiliated.name %></center></h3> <br>
        Dirección: <%= data.affiliated.address %> <br>
        Central Telefónica: <%= data.affiliated.phoneNumber %> <br>
        RIF: <%= data.affiliated.rif %> <br>

        <% if(data.affiliated.portal) { %>
          Portal Web: <%= data.affiliated.portal %> <br>
        <% } %>

      </div>

      <div align="right">
        <%= data.affiliated.state.stateName %>, <%= data.startDate %> <br>
        Presupuesto Nro: <strong> <%= data.code %> </strong>
      </div>

      <br><br>

      <div align="left" style="border: 1px solid black;">
        
        <div style="display: inline-block; margin-right: 0px; width: 390px;">
          <strong>Paciente: </strong><%= data.guaranteeLetter.beneficiary.firstName %> <%= data.guaranteeLetter.beneficiary.lastName %> (<%= data.guaranteeLetter.beneficiary.age %>)
        </div>

        <div style="display: inline-block; width: 258px;">
          <strong>Historia nro: </strong><%= data.history %>
        </div>

        <div>
          <strong>Médico: </strong><%= data.doctorFirstName %> <%= data.doctorLastName %>
        </div>

        <div>
          <strong>Diagnóstico: </strong><%= data.diagnosis %>
        </div>

        <div>
          <strong>Plan Médico: </strong><%= data.treatment %>
        </div>

      </div>

      <br>

      <table>
        <tr>
          <th><center><strong>No.</strong></center> </th>
          <th><center>Concepto</center> </th>
          <th><center>Descripción</center> </th>
          <th><center>Cantidad</center> </th>
          <th><center>Precio (Bs)</center> </th>
        </tr>

        <% var final_cost = 0; %>

      <% for(var i = 0; i < data.item.length; i++) { %>  

          <tr>
            <td><strong><%= i + 1 %></strong></td>
            <td><%= data.item[i].concept %></td>
            <td><%= data.item[i].description %></td>
            <td><center><%= data.item[i].quantity %></center></td>
            <td><center><%= data.item[i].cost %></center></td>
          </tr>

          <% final_cost = final_cost + data.item[i].quantity * data.item[i].cost %>

      <% } %>

        <tr>
          <td><center>- - -</center></td>
          <td><center>- - - - - - -</center></td>
          <td><center>- - - - - - -</center></td>
          <td><center>- - - - - - -</center></td>
          <th><center>Total: Bs <%= final_cost %> </center></th>
        </tr>

      </table>

    </body>
</html>